---
import Home from 'astro-heroicons/solid/Home.astro'
import NavListItem from "./NavListItem.astro";

const currentURL = Astro.url.pathname;
---

<nav class="flex flex-col min-w-[240px] w-60 h-full max-h-screen overflow-auto scrollbar-hide pt-16 pb-4 px-4">
  <h2 class="pb-6 text-lg font-bold text-gray-300">Austin Davis</h2>
  <div>
    <menu>
      <NavListItem label="Home" url="/" currentURL="{currentURL}" />
      <NavListItem label="Projects" url="/projects/" />
      <NavListItem label="Notepad" url="/notepad/" />
      <NavListItem label="Focus" url="/focus/" />
    </menu>
  </div>
</nav>

